<h1>Eventos</h1>

<table id="tblEventos">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Inicio</th>
      <th>Fin</th>
      <th>Clasificaci√≥n</th>
      <th>Tipo de evento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.titulo %></td>
        <td><%= event.inicio %></td>
        <td><%= event.fin %></td>
        <td><%= event.clasificacion %></td>
        <td><%= event.tipo_evento %></td>

        <% if user_signed_in? %>
          <td><%= link_to 'Show', event %></td>
          <td><%= link_to 'Edit', edit_event_path(event) %></td>
          <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <!--<td><%= link_to 'Detalles', event %></td>-->
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

